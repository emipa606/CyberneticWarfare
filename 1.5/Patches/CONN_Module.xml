<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <!-- Module to Cybernetic Organism and Neural Network -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Cybernetic Organism and Neural Network</li>
    </mods>
    <nomatch Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <!-- Nomatch Replace Research and Category -->
        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName="ANN_Shocker"]/thingCategories/li</xpath>
          <value>
            <li>BodyPartsBionic</li>
          </value>
        </li>
      </operations>
    </nomatch>
  </Operation>
  <!-- Module # Weapon Systems of CONN -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Cybernetic Organism and Neural Network</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <!-- Efficiency StatDefs -->
        <li Class="PatchOperationConditional">
          <xpath>/Defs/StatDef[defName="MoveSpeed"]/parts</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>/Defs/StatDef[defName="MoveSpeed"]</xpath>
            <value>
              <parts>
                <li Class="ExtraStatParts.StatPart_EquipmentRequirementModifiers" />
              </parts>
            </value>
          </nomatch>
          <match Class="PatchOperationAdd">
            <xpath>/Defs/StatDef[defName="MoveSpeed"]/parts</xpath>
            <value>
              <li Class="ExtraStatParts.StatPart_EquipmentRequirementModifiers" />
            </value>
          </match>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>/Defs/StatDef[defName="RangedWeapon_Cooldown"]/parts</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>/Defs/StatDef[defName="RangedWeapon_Cooldown"]</xpath>
            <value>
              <parts>
                <li Class="ExtraStatParts.StatPart_EquipmentRequirementModifiers" />
              </parts>
            </value>
          </nomatch>
          <match Class="PatchOperationAdd">
            <xpath>/Defs/StatDef[defName="RangedWeapon_Cooldown"]/parts</xpath>
            <value>
              <li Class="ExtraStatParts.StatPart_EquipmentRequirementModifiers" />
            </value>
          </match>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>/Defs/StatDef[defName="RangedWeapon_DamageMultiplier"]/parts</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>/Defs/StatDef[defName="RangedWeapon_DamageMultiplier"]</xpath>
            <value>
              <parts>
                <li Class="ExtraStatParts.StatPart_EquipmentRequirementModifiers" />
              </parts>
            </value>
          </nomatch>
          <match Class="PatchOperationAdd">
            <xpath>/Defs/StatDef[defName="RangedWeapon_DamageMultiplier"]/parts</xpath>
            <value>
              <li Class="ExtraStatParts.StatPart_EquipmentRequirementModifiers" />
            </value>
          </match>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>/Defs/StatDef[defName="AimingDelayFactor"]/parts</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>/Defs/StatDef[defName="AimingDelayFactor"]</xpath>
            <value>
              <parts>
                <li Class="ExtraStatParts.StatPart_EquipmentRequirementModifiers" />
              </parts>
            </value>
          </nomatch>
          <match Class="PatchOperationAdd">
            <xpath>/Defs/StatDef[defName="AimingDelayFactor"]/parts</xpath>
            <value>
              <li Class="ExtraStatParts.StatPart_EquipmentRequirementModifiers" />
            </value>
          </match>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>/Defs/StatDef[defName="AccuracyShort"]/parts</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>/Defs/StatDef[defName="AccuracyShort"]</xpath>
            <value>
              <parts>
                <li Class="ExtraStatParts.StatPart_EquipmentRequirementModifiers" />
              </parts>
            </value>
          </nomatch>
          <match Class="PatchOperationAdd">
            <xpath>/Defs/StatDef[defName="AccuracyShort"]/parts</xpath>
            <value>
              <li Class="ExtraStatParts.StatPart_EquipmentRequirementModifiers" />
            </value>
          </match>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>/Defs/StatDef[defName="AccuracyMedium"]/parts</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>/Defs/StatDef[defName="AccuracyMedium"]</xpath>
            <value>
              <parts>
                <li Class="ExtraStatParts.StatPart_EquipmentRequirementModifiers" />
              </parts>
            </value>
          </nomatch>
          <match Class="PatchOperationAdd">
            <xpath>/Defs/StatDef[defName="AccuracyMedium"]/parts</xpath>
            <value>
              <li Class="ExtraStatParts.StatPart_EquipmentRequirementModifiers" />
            </value>
          </match>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>/Defs/StatDef[defName="AccuracyLong"]/parts</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>/Defs/StatDef[defName="AccuracyLong"]</xpath>
            <value>
              <parts>
                <li Class="ExtraStatParts.StatPart_EquipmentRequirementModifiers" />
              </parts>
            </value>
          </nomatch>
          <match Class="PatchOperationAdd">
            <xpath>/Defs/StatDef[defName="AccuracyLong"]/parts</xpath>
            <value>
              <li Class="ExtraStatParts.StatPart_EquipmentRequirementModifiers" />
            </value>
          </match>
        </li>
        <!-- Extra Stat Parts Assembly # Special Thanks to ChJess -->
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="CW_DualEraser" or defName="CW_GunBlade" or defName="CW_RiotBreaker" or defName="CW_BallisticShredder" or defName="CW_BallisticCombatGun" or defName="CW_BallisticEnforcer" or defName="CW_Disruptor" or defName="CW_PlasmaGun" or defName="CW_HavocLauncher" or defName="CW_CoilGun" or defName="CW_Accelerator" or defName="CW_ReconBolter"]</xpath>
          <value>
            <modExtensions>
              <li Class="ExtraStatParts.EquipmentRequirementModifiers">
                <requirementNotMetReasonKey>ESP_MissingCyberware</requirementNotMetReasonKey>
                <requireAnyOfTheseHediffs>
                  <li>BionicArm</li>
                  <li>ArchotechArm</li>
                  <li>CONN_hediff_PowerArms</li>
                  <li>CONN_hediff_EnergyCore</li>
                  <li>CONN_hediff_EnergyLink</li>
                  <li>CONN_hediff_Musclewire</li>
                </requireAnyOfTheseHediffs>
                <requireAnyOfTheseApparels>
                  <li>Apparel_PowerArmor</li>
                  <li MayRequire="Mlie.RimworldSpartanFoundry">SF_PoweredAssaultArmor</li>
                  <li MayRequire="Mlie.RimworldSpartanFoundry">SF_EngineerPowerArmor</li>
                  <li MayRequire="Mlie.RimworldSpartanFoundry">SF_ExplorerPowerArmor</li>
                  <li MayRequire="Mlie.RimworldSpartanFoundry">SF_GrenadierPowerArmor</li>
                  <li MayRequire="Mlie.RimworldSpartanFoundry">SF_CommandoArmor</li>
                  <li MayRequire="Mlie.RimworldSpartanFoundry">SF_HazardOperationsArmor</li>
                  <li MayRequire="Mlie.RimworldSpartanFoundry">SF_DiplomatPowerArmor</li>
                  <li MayRequire="Mlie.RimworldSpartanFoundry">SF_DefenderPowerArmor</li>
                  <li MayRequire="Mlie.RimworldSpartanFoundry">SF_ScoutPowerArmor</li>
                  <li MayRequire="Mlie.RimworldSpartanFoundry">SF_SamuraiPowerArmor</li>
                  <li MayRequire="Mlie.RimworldSpartanFoundry">SF_ShockTrooperArmor</li>
                  <li MayRequire="Mlie.RimworldSpartanFoundry">SF_ReconPowerArmor</li>
                  <li MayRequire="rimsenal.core">Apparel_CloseCombatArmor</li>
                  <li MayRequire="rimsenal.core">Apparel_HazardCarapace</li>
                  <li MayRequire="rimsenal.core">Apparel_ReflactorArmor</li>
                  <li MayRequire="rimsenal.core">Apparel_FSArmor</li>
                  <li MayRequire="rimsenal.core">Apparel_FSArmor</li>
                  <li MayRequire="rimsenal.core">Apparel_AssaultArmor</li>
                  <li MayRequire="rimsenal.core">Apparel_Dropsuit</li>
                </requireAnyOfTheseApparels>
                <requireAnyOfTheseRaces>
                  <li>Android5Tier</li>
                  <li>ChjBattleDroid</li>
                  <li>KIJIN_Race</li>
                </requireAnyOfTheseRaces>
                <modifyTheseStats>
                  <MoveSpeed>0.75</MoveSpeed>
                  <RangedWeapon_DamageMultiplier>0.5</RangedWeapon_DamageMultiplier>
                  <AimingDelayFactor>1.5</AimingDelayFactor>
                  <RangedWeapon_Cooldown>2.0</RangedWeapon_Cooldown>
                  <AccuracyShort>0.75</AccuracyShort>
                  <AccuracyMedium>0.5</AccuracyMedium>
                  <AccuracyLong>0.5</AccuracyLong>
                </modifyTheseStats>
              </li>
            </modExtensions>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>
